@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <!-- Authenticated Layout with Sidebar -->
        <div class="flex h-screen overflow-hidden bg-gray-50">
            <!-- Sidebar -->
            <aside class="@(SidebarCollapsed ? "w-20" : "w-64") flex-shrink-0 bg-white border-r border-gray-200 transition-all duration-300">
                <div class="flex flex-col h-full">
                    <!-- Logo -->
                    <div class="flex items-center gap-3 px-4 h-16 border-b border-gray-100">
                        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-600 to-primary-700 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                            </svg>
                        </div>
                        @if (!SidebarCollapsed)
                        {
                            <span class="font-bold text-gray-900 font-display">SMU</span>
                        }
                    </div>

                    <!-- Navigation -->
                    <nav class="flex-1 overflow-y-auto p-4 space-y-1">
                        <NavLink href="/dashboard" class="sidebar-link" Match="NavLinkMatch.All" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Dashboard</span>
                            }
                        </NavLink>

                        <NavLink href="/students" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Studenți</span>
                            }
                        </NavLink>

                        <NavLink href="/courses" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Cursuri</span>
                            }
                        </NavLink>

                        <NavLink href="/grades" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Note</span>
                            }
                        </NavLink>

                        <NavLink href="/attendance" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Prezențe</span>
                            }
                        </NavLink>

                        <NavLink href="/schedule" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Orar</span>
                            }
                        </NavLink>

                        <NavLink href="/reports" class="sidebar-link" ActiveClass="sidebar-link-active">
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                            @if (!SidebarCollapsed)
                            {
                                <span>Rapoarte</span>
                            }
                        </NavLink>
                    </nav>

                    <!-- Collapse Button -->
                    <div class="p-4 border-t border-gray-100">
                        <button @onclick="ToggleSidebar" class="w-full sidebar-link justify-center">
                            <svg class="w-5 h-5 @(SidebarCollapsed ? "rotate-180" : "") transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </aside>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <!-- Header -->
                <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 flex-shrink-0">
                    <div class="flex items-center gap-4">
                        <h1 class="text-lg font-semibold text-gray-900">SMU 3.0</h1>
                    </div>

                    <div class="flex items-center gap-4">
                        <!-- Notifications -->
                        <button class="relative p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                            </svg>
                            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-danger-500 rounded-full"></span>
                        </button>

                        <!-- User Menu -->
                        <div class="flex items-center gap-3">
                            <div class="avatar-md bg-primary-100 text-primary-700">
                                @context.User.Identity?.Name?.FirstOrDefault()
                            </div>
                            <div class="hidden sm:block">
                                <p class="text-sm font-medium text-gray-900">@context.User.Identity?.Name</p>
                            </div>
                            <a href="/logout" class="btn-outline btn-sm">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                </svg>
                                <span class="hidden sm:inline">Ieșire</span>
                            </a>
                        </div>
                    </div>
                </header>

                <!-- Page Content -->
                <main class="flex-1 overflow-auto p-6">
                    @Body
                </main>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <!-- Simple layout for non-authenticated pages -->
        @Body
    </NotAuthorized>
</AuthorizeView>

<div id="blazor-error-ui" data-nosnippet>
    A apărut o eroare neașteptată.
    <a href="." class="reload">Reîncarcă</a>
    <span class="dismiss">X</span>
</div>

@code {
    private bool SidebarCollapsed { get; set; }

    private void ToggleSidebar()
    {
        SidebarCollapsed = !SidebarCollapsed;
    }
}
