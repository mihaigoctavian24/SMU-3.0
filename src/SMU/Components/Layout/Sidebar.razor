@* Sidebar Component - Left navigation sidebar with logo, menu items, and collapse functionality *@
@inject IStringLocalizer<SharedResources> Localizer

<aside class="@(Collapsed ? "w-20" : "w-64") flex-shrink-0 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 transition-all duration-300">
    <div class="flex flex-col h-full">
        <!-- Logo -->
        <div class="flex items-center gap-3 px-4 h-16 border-b border-gray-100 dark:border-gray-700">
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-600 to-primary-700 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                </svg>
            </div>
            @if (!Collapsed)
            {
                <span class="font-bold text-gray-900 dark:text-gray-100 font-display">SMU</span>
            }
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto p-4 space-y-1">
            <!-- Dashboard - All roles -->
            <NavLink href="/dashboard" class="sidebar-link" Match="NavLinkMatch.All" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Dashboard"]</span>
                }
            </NavLink>

            <!-- Students - Secretary, Dean, Rector, Admin -->
            @if (CanManageStudents)
            {
                <NavLink href="/studenti" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>@Localizer["Students"]</span>
                    }
                </NavLink>
            }

            <!-- Grades - All roles (different views) -->
            <NavLink href="/note" class="sidebar-link" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Grades"]</span>
                }
            </NavLink>

            <!-- Attendance - Professor, Secretary, Dean, Admin -->
            @if (CanManageAttendance)
            {
                <NavLink href="/prezente" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>@Localizer["Attendance"]</span>
                    }
                </NavLink>
            }

            <!-- Schedule - All roles -->
            <NavLink href="/orar" class="sidebar-link" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Schedule"]</span>
                }
            </NavLink>

            <!-- Faculties - Dean, Rector, Admin -->
            @if (CanViewFaculties)
            {
                <NavLink href="/facultati" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>@Localizer["Faculties"]</span>
                    }
                </NavLink>
            }

            <!-- Analytics - All roles (role-specific page) -->
            <NavLink href="@GetAnalyticsLink()" class="sidebar-link" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Analytics"]</span>
                }
            </NavLink>

            <!-- Reports - Dean, Rector, Admin -->
            @if (CanViewReports)
            {
                <NavLink href="/rapoarte" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>@Localizer["Reports"]</span>
                    }
                </NavLink>
            }

            <!-- Export - All roles -->
            <NavLink href="/export" class="sidebar-link" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Export"]</span>
                }
            </NavLink>

            <!-- Admin Section - Admin only -->
            @if (IsAdmin)
            {
                <NavLink href="/admin/utilizatori" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>@Localizer["Admin"]</span>
                    }
                </NavLink>

                <NavLink href="/admin/activity-feed" class="sidebar-link" ActiveClass="sidebar-link-active">
                    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                    @if (!Collapsed)
                    {
                        <span>Activity Feed</span>
                    }
                </NavLink>
            }

            <!-- Settings - All roles -->
            <NavLink href="/setari" class="sidebar-link" ActiveClass="sidebar-link-active">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                @if (!Collapsed)
                {
                    <span>@Localizer["Settings"]</span>
                }
            </NavLink>
        </nav>

        <!-- Collapse Button & User Info -->
        <div class="border-t border-gray-100 dark:border-gray-700">
            @if (!Collapsed)
            {
                <!-- User Info Section (when expanded) -->
                <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 flex items-center justify-center font-semibold text-sm">
                            @UserInitial
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate">@UserName</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400 truncate">@GetRoleDisplayName()</p>
                        </div>
                    </div>
                    <a href="/logout" class="w-full mt-3 btn-outline btn-sm justify-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                        <span>@Localizer["Logout"]</span>
                    </a>
                </div>
            }

            <!-- Collapse Toggle Button -->
            <div class="p-4">
                <button @onclick="ToggleCollapse" class="w-full sidebar-link justify-center" title="@(Collapsed ? Localizer["ExpandSidebar"] : Localizer["CollapseSidebar"])">
                    <svg class="w-5 h-5 @(Collapsed ? "rotate-180" : "") transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</aside>

@code {
    [Parameter]
    public bool Collapsed { get; set; }

    [Parameter]
    public EventCallback<bool> CollapsedChanged { get; set; }

    [Parameter]
    public string UserName { get; set; } = "User";

    [Parameter]
    public string UserRole { get; set; } = "Student";

    private string UserInitial => UserName?.FirstOrDefault().ToString().ToUpper() ?? "U";

    // Role-based menu visibility
    private bool IsAdmin => UserRole == "Admin";
    private bool IsRector => UserRole == "Rector";
    private bool IsDean => UserRole == "Dean";
    private bool IsSecretary => UserRole == "Secretary";
    private bool IsProfessor => UserRole == "Professor";
    private bool IsStudent => UserRole == "Student";

    // Permission checks
    private bool CanManageStudents => IsSecretary || IsDean || IsRector || IsAdmin;
    private bool CanManageAttendance => IsProfessor || IsSecretary || IsDean || IsAdmin;
    private bool CanViewFaculties => IsDean || IsRector || IsAdmin;
    private bool CanViewReports => IsDean || IsRector || IsAdmin;

    private string GetRoleDisplayName() => UserRole switch
    {
        "Admin" => Localizer["RoleAdmin"],
        "Rector" => Localizer["RoleRector"],
        "Dean" => Localizer["RoleDean"],
        "Secretary" => Localizer["RoleSecretary"],
        "Professor" => Localizer["RoleProfessor"],
        "Student" => Localizer["RoleStudent"],
        _ => UserRole
    };

    private string GetAnalyticsLink() => UserRole switch
    {
        "Student" => "/analytics/student",
        "Professor" => "/analytics/professor",
        "Dean" => "/analytics/faculty",
        "Rector" => "/analytics/university",
        "Admin" => "/analytics/university",
        _ => "/analytics/student"
    };

    private async Task ToggleCollapse()
    {
        Collapsed = !Collapsed;
        await CollapsedChanged.InvokeAsync(Collapsed);
    }
}
