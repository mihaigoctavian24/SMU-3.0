@* Header Component - Top navigation bar with search, notifications, and user menu *@
@inject IStringLocalizer<SharedResources> Localizer

<header class="h-16 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between px-6 flex-shrink-0">
    <!-- Left Section: Mobile Menu Toggle + Title -->
    <div class="flex items-center gap-4">
        <!-- Mobile Menu Toggle (visible on small screens) -->
        <button @onclick="OnMobileMenuToggle" class="lg:hidden p-2 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>

        <!-- Search Bar (desktop only) -->
        <div class="hidden lg:block relative">
            <input
                type="text"
                placeholder="@Localizer["SearchPlaceholder"]"
                class="w-64 pl-10 pr-4 py-2 text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-primary-500 dark:focus:border-primary-400 transition-colors placeholder:text-gray-400 dark:placeholder:text-gray-500"
                @bind="SearchQuery"
                @bind:event="oninput" />
            <svg class="w-5 h-5 text-gray-400 dark:text-gray-500 absolute left-3 top-2.5 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
        </div>
    </div>

    <!-- Right Section: Language Selector, Date, Notifications, Theme Toggle, User Menu -->
    <div class="flex items-center gap-4">
        <!-- Language Selector -->
        <LanguageSelector />
        <!-- Current Date Display (hidden on mobile) -->
        <div class="hidden md:flex items-center gap-2 px-3 py-1.5 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="text-sm text-gray-600 dark:text-gray-300">@CurrentDate</span>
        </div>

        <!-- Theme Toggle -->
        <ThemeToggle />

        <!-- Notifications Bell Component -->
        <NotificationBell />

        <!-- User Menu -->
        <div class="flex items-center gap-3">
            <div class="avatar-md bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400">
                @UserInitial
            </div>
            <div class="hidden sm:block">
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100">@UserName</p>
                <p class="text-xs text-gray-500 dark:text-gray-400">@UserRole</p>
            </div>

            <!-- User Dropdown Toggle -->
            <button @onclick="ToggleUserMenu" class="p-1 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                <svg class="w-5 h-5 @(ShowUserMenu ? "rotate-180" : "") transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
            </button>
        </div>
    </div>
</header>


<!-- User Menu Dropdown (shown when ToggleUserMenu is active) -->
@if (ShowUserMenu)
{
    <div class="absolute right-6 top-20 w-64 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 z-50">
        <div class="p-4 border-b border-gray-100 dark:border-gray-700">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 flex items-center justify-center font-semibold">
                    @UserInitial
                </div>
                <div class="flex-1">
                    <p class="font-medium text-gray-900 dark:text-gray-100">@UserName</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">@UserRole</p>
                </div>
            </div>
        </div>
        <div class="py-2">
            <a href="/profile" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                @Localizer["Profile"]
            </a>
            <a href="/settings" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                @Localizer["Settings"]
            </a>
        </div>
        <div class="border-t border-gray-100 dark:border-gray-700 py-2">
            <a href="/logout" class="w-full flex items-center gap-3 px-4 py-2 text-sm text-danger-600 dark:text-danger-400 hover:bg-danger-50 dark:hover:bg-danger-900/20 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                @Localizer["Logout"]
            </a>
        </div>
    </div>
}

@code {
    [Parameter]
    public string UserName { get; set; } = "User";

    [Parameter]
    public string UserRole { get; set; } = "Student";

    [Parameter]
    public EventCallback OnMobileMenuToggle { get; set; }

    private string SearchQuery { get; set; } = string.Empty;
    private bool ShowUserMenu { get; set; }
    private string CurrentDate => DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ro-RO"));
    private string UserInitial => UserName?.FirstOrDefault().ToString().ToUpper() ?? "U";

    private void ToggleUserMenu()
    {
        ShowUserMenu = !ShowUserMenu;
    }
}
