@* RecentActivityList.razor - Reusable activity list component for dashboards *@

<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">@Title</h3>
        @if (!string.IsNullOrEmpty(ViewAllLink))
        {
            <a href="@ViewAllLink" class="text-sm font-medium text-primary-600 hover:text-primary-700">
                Vezi toate
            </a>
        }
    </div>

    @if (Items == null || !Items.Any())
    {
        <div class="px-6 py-12 text-center">
            <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <p class="text-gray-500">@EmptyMessage</p>
        </div>
    }
    else
    {
        <ul class="divide-y divide-gray-100">
            @foreach (var item in Items.Take(MaxItems))
            {
                <li class="px-6 py-4 hover:bg-gray-50 transition-colors duration-150">
                    <div class="flex items-start space-x-4">
                        @if (item.IconContent != null)
                        {
                            <div class="flex-shrink-0">
                                @item.IconContent
                            </div>
                        }
                        else
                        {
                            <div class="flex-shrink-0 w-10 h-10 rounded-full @GetIconBgClass(item.Type) flex items-center justify-center">
                                <svg class="w-5 h-5 @GetIconClass(item.Type)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    @((MarkupString)GetIconPath(item.Type))
                                </svg>
                            </div>
                        }
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <p class="text-sm font-medium text-gray-900 truncate">@item.Title</p>
                                @if (!string.IsNullOrEmpty(item.Badge))
                                {
                                    <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full @GetBadgeClass(item.BadgeType)">
                                        @item.Badge
                                    </span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="mt-1 text-sm text-gray-500 truncate">@item.Description</p>
                            }
                            @if (item.Timestamp.HasValue)
                            {
                                <p class="mt-1 text-xs text-gray-400">@FormatTimestamp(item.Timestamp.Value)</p>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(item.ActionLink))
                        {
                            <div class="flex-shrink-0">
                                <a href="@item.ActionLink" class="text-primary-600 hover:text-primary-700">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </a>
                            </div>
                        }
                    </div>
                </li>
            }
        </ul>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Activitate recenta";
    [Parameter] public List<ActivityItem>? Items { get; set; }
    [Parameter] public string? ViewAllLink { get; set; }
    [Parameter] public int MaxItems { get; set; } = 5;
    [Parameter] public string EmptyMessage { get; set; } = "Nu exista activitate recenta";

    public class ActivityItem
    {
        public string Title { get; set; } = "";
        public string? Description { get; set; }
        public DateTime? Timestamp { get; set; }
        public string Type { get; set; } = "default"; // grade, attendance, document, notification, user, course
        public string? Badge { get; set; }
        public string BadgeType { get; set; } = "default"; // success, warning, danger, info, default
        public string? ActionLink { get; set; }
        public RenderFragment? IconContent { get; set; }
    }

    private string GetIconBgClass(string type) => type switch
    {
        "grade" => "bg-success-100",
        "attendance" => "bg-primary-100",
        "document" => "bg-warning-100",
        "notification" => "bg-info-100",
        "user" => "bg-purple-100",
        "course" => "bg-indigo-100",
        "warning" => "bg-danger-100",
        _ => "bg-gray-100"
    };

    private string GetIconClass(string type) => type switch
    {
        "grade" => "text-success-600",
        "attendance" => "text-primary-600",
        "document" => "text-warning-600",
        "notification" => "text-info-600",
        "user" => "text-purple-600",
        "course" => "text-indigo-600",
        "warning" => "text-danger-600",
        _ => "text-gray-600"
    };

    private string GetIconPath(string type) => type switch
    {
        "grade" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01\"/>",
        "attendance" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z\"/>",
        "document" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z\"/>",
        "notification" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9\"/>",
        "user" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z\"/>",
        "course" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253\"/>",
        "warning" => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z\"/>",
        _ => "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z\"/>"
    };

    private string GetBadgeClass(string badgeType) => badgeType switch
    {
        "success" => "bg-success-100 text-success-700",
        "warning" => "bg-warning-100 text-warning-700",
        "danger" => "bg-danger-100 text-danger-700",
        "info" => "bg-info-100 text-info-700",
        _ => "bg-gray-100 text-gray-700"
    };

    private string FormatTimestamp(DateTime timestamp)
    {
        var diff = DateTime.Now - timestamp;
        if (diff.TotalMinutes < 1) return "Acum";
        if (diff.TotalMinutes < 60) return $"Acum {(int)diff.TotalMinutes} min";
        if (diff.TotalHours < 24) return $"Acum {(int)diff.TotalHours} ore";
        if (diff.TotalDays < 7) return $"Acum {(int)diff.TotalDays} zile";
        return timestamp.ToString("dd MMM yyyy");
    }
}
