@* StatsCard.razor - Reusable stats card component for dashboards *@

<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
    <div class="flex items-center justify-between">
        <div class="flex-1">
            <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">@Label</p>
            <p class="mt-2 text-3xl font-bold text-gray-900">@Value</p>
            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <p class="mt-1 text-sm text-gray-500">@Subtitle</p>
            }
            @if (ShowTrend && TrendValue != 0)
            {
                <div class="mt-2 flex items-center text-sm">
                    @if (TrendValue > 0)
                    {
                        <svg class="w-4 h-4 text-success-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                        </svg>
                        <span class="text-success-600 font-medium">+@TrendValue.ToString("0.#")%</span>
                    }
                    else
                    {
                        <svg class="w-4 h-4 text-danger-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                        </svg>
                        <span class="text-danger-600 font-medium">@TrendValue.ToString("0.#")%</span>
                    }
                    <span class="text-gray-400 ml-1">vs luna trecuta</span>
                </div>
            }
        </div>
        <div class="flex-shrink-0 ml-4">
            <div class="w-14 h-14 rounded-xl @IconBgClass flex items-center justify-center">
                @if (IconContent != null)
                {
                    @IconContent
                }
                else
                {
                    <svg class="w-7 h-7 @IconClass" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        @((MarkupString)GetDefaultIcon())
                    </svg>
                }
            </div>
        </div>
    </div>
    @if (ActionLink != null && !string.IsNullOrEmpty(ActionText))
    {
        <div class="mt-4 pt-4 border-t border-gray-100">
            <a href="@ActionLink" class="text-sm font-medium text-primary-600 hover:text-primary-700 flex items-center">
                @ActionText
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    }
</div>

@code {
