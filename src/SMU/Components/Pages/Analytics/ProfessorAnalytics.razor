@page "/analytics/professor"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SMU.Services
@using SMU.Components.Shared.Charts
@using static SMU.Components.Shared.Charts.SmuBarChart
@using static SMU.Components.Shared.Charts.SmuDonutChart
@attribute [Authorize(Roles = "Professor")]
@inject IAnalyticsService AnalyticsService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Analiza Cursuri - SMU</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-xl p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold">Analiza Cursuri</h1>
                <p class="mt-1 text-indigo-100">@ProfessorName - Semestrul @CurrentSemester</p>
            </div>
            <div class="text-right">
                <p class="text-sm text-indigo-200">An universitar</p>
                <p class="text-lg font-semibold">@CurrentAcademicYear</p>
            </div>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-indigo-600"></div>
        </div>
    }
    else
    {
        <!-- Stats Overview Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Active Courses -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Cursuri Active</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">@Stats.CourseCount</p>
                    </div>
                    <div class="p-3 bg-indigo-100 rounded-lg">
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Total Students -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Total Studenti</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">@Stats.TotalStudents</p>
                    </div>
                    <div class="p-3 bg-emerald-100 rounded-lg">
                        <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Average Grade Given -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Media Note Acordate</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">@Stats.AverageGradeGiven.ToString("0.00")</p>
                    </div>
                    <div class="p-3 bg-amber-100 rounded-lg">
                        <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Pending Grades -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Note in Asteptare</p>
                        <p class="text-3xl font-bold text-gray-900 mt-2">@Stats.PendingGrades</p>
                    </div>
                    <div class="p-3 @(Stats.PendingGrades > 0 ? "bg-red-100" : "bg-gray-100") rounded-lg">
                        <svg class="w-8 h-8 @(Stats.PendingGrades > 0 ? "text-red-600" : "text-gray-400")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Average Grade by Course -->
            <SmuBarChart
                Title="Performanta per Curs"
                Data="@PerformanceChartData"
                YAxisLabel="Media"
                Height="400"
                Horizontal="false"
                IsLoading="@IsLoading" />

            <!-- Grade Distribution -->
            <SmuDonutChart
                Title="Distributie Note Acordate"
                Data="@GradeDistributionData"
                Height="400"
                ShowLegend="true"
                IsLoading="@IsLoading" />
        </div>

        <!-- Course Details Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Pass Rate by Course -->
            <SmuBarChart
                Title="Rata Promovare per Curs"
                Data="@PassRateChartData"
                YAxisLabel="Rata Promovare (%)"
                Height="400"
                Horizontal="true"
                IsLoading="@IsLoading" />

            <!-- Attendance Rate by Course -->
            <SmuBarChart
                Title="Prezenta per Curs"
                Data="@AttendanceRateChartData"
                YAxisLabel="Rata Prezenta (%)"
                Height="400"
                Horizontal="false"
                IsLoading="@IsLoading" />
        </div>

        <!-- Course Performance Table -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">Detalii Performanta Cursuri</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Curs</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cod</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Studenti</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Media</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Promovare</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Prezenta</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (CoursePerformances.Any())
                        {
                            @foreach (var course in CoursePerformances)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@course.CourseName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">@course.CourseCode</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="text-sm text-gray-900">@course.StudentCount</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <span class="px-3 py-1 text-sm font-semibold rounded-full @GetGradeColorClass(course.AverageGrade)">
                                            @course.AverageGrade.ToString("0.00")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <span class="px-3 py-1 text-sm font-semibold rounded-full @GetPassRateColorClass(course.PassRate)">
                                            @course.PassRate.ToString("0")%
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                                <div class="@GetAttendanceBarColorClass(course.AttendanceRate) h-2 rounded-full" style="width: @(course.AttendanceRate)%"></div>
                                            </div>
                                            <span class="ml-2 text-sm text-gray-600">@course.AttendanceRate.ToString("0")%</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="px-6 py-12 text-center">
                                    <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    <p class="text-gray-500">Nu exista date disponibile</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private bool IsLoading = true;
    private string ProfessorName = "Profesor";
    private string CurrentSemester = "I";
    private string CurrentAcademicYear = "2024-2025";

    private ProfessorAnalyticsDto Stats = new();
    private List<CoursePerformanceDto> CoursePerformances = new();

    // Chart data
    private List<ChartDataItem> PerformanceChartData = new();
    private List<ChartDataSegment> GradeDistributionData = new();
    private List<ChartDataItem> PassRateChartData = new();
    private List<ChartDataItem> AttendanceRateChartData = new();

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                ProfessorName = user.FindFirst("FullName")?.Value ?? user.Identity.Name ?? "Profesor";

                // Get professor ID from claims
                var professorIdClaim = user.FindFirst("ProfessorId")?.Value;

                if (Guid.TryParse(professorIdClaim, out var professorId))
                {
                    await LoadRealData(professorId);
                }
                else
                {
                    LoadDemoData();
                }
            }
            else
            {
                LoadDemoData();
            }
        }
        catch (Exception)
        {
            LoadDemoData();
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadRealData(Guid professorId)
    {
        Stats = await AnalyticsService.GetProfessorStatsAsync(professorId);
        CoursePerformances = await AnalyticsService.GetCoursePerformancesAsync(professorId);

        PrepareChartData();
    }

    private void LoadDemoData()
    {
        // Demo stats
        Stats = new ProfessorAnalyticsDto
        {
            CourseCount = 4,
            TotalStudents = 156,
            AverageGradeGiven = 7.85m,
            PendingGrades = 8
        };

        // Demo course performances
        CoursePerformances = new List<CoursePerformanceDto>
        {
            new() {
                CourseName = "Programare Orientata pe Obiecte",
                CourseCode = "POO101",
                StudentCount = 45,
                AverageGrade = 8.2m,
                PassRate = 88.9m,
                AttendanceRate = 92.3m
            },
            new() {
                CourseName = "Baze de Date",
                CourseCode = "BD201",
                StudentCount = 52,
                AverageGrade = 7.8m,
                PassRate = 82.7m,
                AttendanceRate = 87.5m
            },
            new() {
                CourseName = "Algoritmi si Structuri de Date",
                CourseCode = "ASD102",
                StudentCount = 38,
                AverageGrade = 8.5m,
                PassRate = 92.1m,
                AttendanceRate = 94.7m
            },
            new() {
                CourseName = "Programare Web",
                CourseCode = "WEB301",
                StudentCount = 21,
                AverageGrade = 7.2m,
                PassRate = 76.2m,
                AttendanceRate = 85.0m
            }
        };

        PrepareChartData();
    }

    private void PrepareChartData()
    {
        // Performance chart - Average grade by course
        PerformanceChartData = CoursePerformances.Select(c => new ChartDataItem
        {
            Label = c.CourseCode,
            Value = c.AverageGrade
        }).ToList();

        // Grade distribution - Demo data showing distribution of grades given
        GradeDistributionData = new List<ChartDataSegment>
        {
            new() { Label = "10", Value = 12, Color = "#10B981" },    // emerald-500
            new() { Label = "9", Value = 28, Color = "#34D399" },     // emerald-400
            new() { Label = "8", Value = 45, Color = "#6EE7B7" },     // emerald-300
            new() { Label = "7", Value = 38, Color = "#F59E0B" },     // amber-500
            new() { Label = "6", Value = 22, Color = "#FBBF24" },     // amber-400
            new() { Label = "5", Value = 11, Color = "#FCD34D" },     // amber-300
            new() { Label = "< 5", Value = 0, Color = "#EF4444" }     // red-500
        };

        // Pass rate chart
        PassRateChartData = CoursePerformances.Select(c => new ChartDataItem
        {
            Label = c.CourseCode,
            Value = c.PassRate
        }).ToList();

        // Attendance rate chart
        AttendanceRateChartData = CoursePerformances.Select(c => new ChartDataItem
        {
            Label = c.CourseCode,
            Value = c.AttendanceRate
        }).ToList();
    }

    private string GetGradeColorClass(decimal grade)
    {
        if (grade >= 9) return "bg-emerald-100 text-emerald-800";
        if (grade >= 8) return "bg-green-100 text-green-800";
        if (grade >= 7) return "bg-blue-100 text-blue-800";
        if (grade >= 6) return "bg-amber-100 text-amber-800";
        if (grade >= 5) return "bg-orange-100 text-orange-800";
        return "bg-red-100 text-red-800";
    }

    private string GetPassRateColorClass(decimal passRate)
    {
        if (passRate >= 90) return "bg-emerald-100 text-emerald-800";
        if (passRate >= 80) return "bg-green-100 text-green-800";
        if (passRate >= 70) return "bg-blue-100 text-blue-800";
        if (passRate >= 60) return "bg-amber-100 text-amber-800";
        return "bg-red-100 text-red-800";
    }

    private string GetAttendanceBarColorClass(decimal attendanceRate)
    {
        if (attendanceRate >= 90) return "bg-emerald-500";
        if (attendanceRate >= 80) return "bg-green-500";
        if (attendanceRate >= 70) return "bg-blue-500";
        if (attendanceRate >= 60) return "bg-amber-500";
        return "bg-red-500";
    }
}
