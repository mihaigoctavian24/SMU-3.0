@page "/analytics/faculty"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using SMU.Services
@using SMU.Data.Entities
@using SMU.Components.Shared.Charts
@attribute [Authorize(Roles = "Dean,Admin")]

<PageTitle>KPI Facultate - SMU</PageTitle>

<RadzenStack Gap="1.5rem">
    @if (isLoading)
    {
        <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="padding: 6rem 0;">
            <RadzenProgressBarCircular ShowValue="false" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large" />
        </RadzenStack>
    }
    else if (!hasFacultyId)
    {
        <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" ShowIcon="true">
            <RadzenStack AlignItems="AlignItems.Center" Gap="1rem">
                <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; font-weight: 600;">Contul nu este asociat cu o facultate</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">Contacteaza administratorul pentru a asocia contul cu o facultate.</RadzenText>
            </RadzenStack>
        </RadzenAlert>
    }
    else if (!hasData)
    {
        <RadzenAlert AlertStyle="AlertStyle.Info" Variant="Variant.Flat" ShowIcon="true">
            <RadzenStack AlignItems="AlignItems.Center" Gap="1rem">
                <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; font-weight: 600;">Nu exista date de analiza</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">Facultatea nu are inca studenti sau note inregistrate in sistem.</RadzenText>
            </RadzenStack>
        </RadzenAlert>
    }
    else
    {
        <!-- Header -->
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween" Wrap="FlexWrap.Wrap" Gap="1rem">
            <RadzenStack Gap="0.25rem">
                <RadzenText TextStyle="TextStyle.H4" Style="margin: 0; font-weight: bold;">KPI Facultate: @facultyStats.FacultyName</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Raport analitic pentru performanta facultatii</RadzenText>
            </RadzenStack>

            <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center">
                <!-- Semester Selector -->
                <RadzenDropDown @bind-Value="selectedSemester"
                                Data="@semesterOptions"
                                TextProperty="Text"
                                ValueProperty="Value"
                                Change="@OnSemesterChanged"
                                Style="width: 200px;" />

                <!-- Export Button -->
                <RadzenButton Text="Export PDF"
                              Icon="download"
                              ButtonStyle="ButtonStyle.Light" />
            </RadzenStack>
        </RadzenStack>

        <!-- KPI Cards -->
        <RadzenRow Gap="1.5rem" RowGap="1.5rem">
            <!-- Total Students -->
            <RadzenColumn Size="12" SizeSM="6" SizeMD="4" SizeLG="2">
                <RadzenCard Style="padding: 1.25rem; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <div style="width: 3rem; height: 3rem; background: rgba(var(--rz-primary-rgb), 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="school" Style="font-size: 1.5rem; color: var(--rz-primary);" />
                        </div>
                        <RadzenStack Gap="0.125rem">
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Total Studenti</RadzenText>
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">@facultyStats.StudentCount</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Total Professors -->
            <RadzenColumn Size="12" SizeSM="6" SizeMD="4" SizeLG="2">
                <RadzenCard Style="padding: 1.25rem; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <div style="width: 3rem; height: 3rem; background: rgba(var(--rz-success-rgb), 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="work" Style="font-size: 1.5rem; color: var(--rz-success);" />
                        </div>
                        <RadzenStack Gap="0.125rem">
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Total Profesori</RadzenText>
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">@facultyStats.ProfessorCount</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Average Grade -->
            <RadzenColumn Size="12" SizeSM="6" SizeMD="4" SizeLG="2">
                <RadzenCard Style="padding: 1.25rem; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <div style="width: 3rem; height: 3rem; background: rgba(var(--rz-warning-rgb), 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="star" Style="font-size: 1.5rem; color: var(--rz-warning);" />
                        </div>
                        <RadzenStack Gap="0.125rem">
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Media Facultate</RadzenText>
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">@facultyStats.AverageGrade.ToString("F2")</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Pass Rate -->
            <RadzenColumn Size="12" SizeSM="6" SizeMD="4" SizeLG="2">
                <RadzenCard Style="padding: 1.25rem; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <div style="width: 3rem; height: 3rem; background: rgba(var(--rz-success-rgb), 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="check_circle" Style="font-size: 1.5rem; color: var(--rz-success);" />
                        </div>
                        <RadzenStack Gap="0.125rem">
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Rata Promovare</RadzenText>
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">@facultyStats.PassRate.ToString("F1")%</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Program Count -->
            <RadzenColumn Size="12" SizeSM="6" SizeMD="4" SizeLG="2">
                <RadzenCard Style="padding: 1.25rem; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <div style="width: 3rem; height: 3rem; background: rgba(var(--rz-info-rgb), 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="inventory_2" Style="font-size: 1.5rem; color: var(--rz-info);" />
                        </div>
                        <RadzenStack Gap="0.125rem">
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Programe Studiu</RadzenText>
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">@facultyStats.ProgramCount</RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>

        <!-- Charts Row 1 -->
        <RadzenRow Gap="1.5rem" RowGap="1.5rem">
            <!-- Grade Distribution Donut Chart -->
            <RadzenColumn Size="12" SizeLG="6">
                <RadzenCard Style="padding: 1.5rem;">
                    <SmuDonutChart Title="Distributie Note Facultate"
                                  Data="@gradeDistributionData"
                                  IsLoading="@isLoading"
                                  Height="400" />
                </RadzenCard>
            </RadzenColumn>

            <!-- Program Comparison Bar Chart -->
            <RadzenColumn Size="12" SizeLG="6">
                <RadzenCard Style="padding: 1.5rem;">
                    <SmuBarChart Title="Comparatie Programe - Medii"
                                Data="@programComparisonData"
                                YAxisLabel="Media"
                                IsLoading="@isLoading"
                                Height="400" />
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>

        <!-- Charts Row 2 -->
        <RadzenRow Gap="1.5rem" RowGap="1.5rem">
            <!-- Students per Program -->
            <RadzenColumn Size="12" SizeLG="6">
                <RadzenCard Style="padding: 1.5rem;">
                    <SmuBarChart Title="Studenti per Program"
                                Data="@studentsPerProgramData"
                                YAxisLabel="Numar Studenti"
                                Horizontal="true"
                                IsLoading="@isLoading"
                                Height="400" />
                </RadzenCard>
            </RadzenColumn>

            <!-- Attendance per Program -->
            <RadzenColumn Size="12" SizeLG="6">
                <RadzenCard Style="padding: 1.5rem;">
                    <SmuBarChart Title="Rata Prezenta per Program"
                                Data="@attendancePerProgramData"
                                YAxisLabel="Procent Prezenta (%)"
                                IsLoading="@isLoading"
                                Height="400" />
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>

        <!-- Trend Analysis Line Chart -->
        <RadzenCard Style="padding: 1.5rem;">
            <SmuLineChart Title="Evolutie Medie Facultate - Ultimele 6 Luni"
                         Data="@trendData"
                         YAxisLabel="Media"
                         IsLoading="@isLoading"
                         Height="350" />
        </RadzenCard>

        <!-- At-Risk Students Panel -->
        <RadzenCard Style="padding: 0; overflow: hidden;">
            <div style="padding: 1rem 1.5rem; border-bottom: 1px solid var(--rz-border-color);">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                    <RadzenStack Gap="0.25rem">
                        <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; font-weight: 600;">Studenti in Risc</RadzenText>
                        <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Studenti cu risc ridicat sau critic</RadzenText>
                    </RadzenStack>
                    <RadzenBadge BadgeStyle="BadgeStyle.Danger" Text="@($"{atRiskStudents.Count} studenti")" />
                </RadzenStack>
            </div>

            @if (atRiskStudents.Any())
            {
                <RadzenDataGrid Data="@atRiskStudents.Take(10)" TItem="AtRiskStudentDto" AllowPaging="false" AllowSorting="true" Style="border: none;">
                    <Columns>
                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="Name" Title="Nume Student">
                            <Template Context="student">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; font-weight: 500;">@student.Name</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="ProgramName" Title="Program">
                            <Template Context="student">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">@student.ProgramName</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="RiskScore" Title="Scor Risc" Width="100px" TextAlign="TextAlign.Center">
                            <Template Context="student">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@student.RiskScore</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="GradeRiskFactor" Title="Factor Note" Width="120px" TextAlign="TextAlign.Center">
                            <Template Context="student">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@student.GradeRiskFactor.ToString("F1")</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="AttendanceRiskFactor" Title="Factor Prezenta" Width="130px" TextAlign="TextAlign.Center">
                            <Template Context="student">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@student.AttendanceRiskFactor.ToString("F1")</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AtRiskStudentDto" Property="Risk" Title="Nivel Risc" Width="120px" TextAlign="TextAlign.Center">
                            <Template Context="student">
                                @if (student.Risk == RiskLevel.Critical)
                                {
                                    <RadzenBadge BadgeStyle="BadgeStyle.Danger" Text="Critic" IsPill="true" />
                                }
                                else
                                {
                                    <RadzenBadge BadgeStyle="BadgeStyle.Warning" Text="Ridicat" IsPill="true" />
                                }
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
                @if (atRiskStudents.Count > 10)
                {
                    <div style="padding: 1rem; background: var(--rz-base-200); text-align: center;">
                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Si inca @(atRiskStudents.Count - 10) studenti...</RadzenText>
                    </div>
                }
            }
            else
            {
                <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="padding: 3rem;">
                    <RadzenIcon Icon="check_circle" Style="font-size: 3rem; color: var(--rz-text-disabled-color);" />
                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0.5rem 0 0 0; color: var(--rz-text-secondary-color);">Nu exista studenti in risc ridicat sau critic</RadzenText>
                </RadzenStack>
            }
        </RadzenCard>
    }
</RadzenStack>

@code {
    [Inject] private IAnalyticsService AnalyticsService { get; set; } = default!;
    [Inject] private IRiskScoringService RiskScoringService { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = default!;

    private bool isLoading = true;
    private bool hasFacultyId = false;
    private bool hasData = false;
    private string selectedSemester = "current";
    private Guid? currentFacultyId;

    private List<SemesterOption> semesterOptions = new()
    {
        new SemesterOption { Value = "current", Text = "Semestrul Curent" },
        new SemesterOption { Value = "sem1_2024", Text = "Semestrul I, 2024" },
        new SemesterOption { Value = "sem2_2024", Text = "Semestrul II, 2024" },
        new SemesterOption { Value = "sem1_2023", Text = "Semestrul I, 2023" },
        new SemesterOption { Value = "sem2_2023", Text = "Semestrul II, 2023" }
    };

    // Faculty Stats
    private FacultyAnalyticsDto facultyStats = new();
    private List<ProgramPerformanceDto> programPerformances = new();

    // Chart Data
    private List<SmuDonutChart.ChartDataSegment> gradeDistributionData = new();
    private List<SmuBarChart.ChartDataItem> programComparisonData = new();
    private List<SmuBarChart.ChartDataItem> studentsPerProgramData = new();
    private List<SmuBarChart.ChartDataItem> attendancePerProgramData = new();
    private List<SmuLineChart.ChartDataPoint> trendData = new();

    // At-Risk Students
    private List<AtRiskStudentDto> atRiskStudents = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        hasFacultyId = false;
        hasData = false;

        try
        {
            // Get authenticated user's faculty
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var facultyIdClaim = authState.User.FindFirst("FacultyId")?.Value;

            if (string.IsNullOrEmpty(facultyIdClaim) || !Guid.TryParse(facultyIdClaim, out Guid facultyId))
            {
                // No faculty associated with this user
                return;
            }

            hasFacultyId = true;
            currentFacultyId = facultyId;

            // Load faculty stats
            facultyStats = await AnalyticsService.GetFacultyStatsAsync(facultyId);

            // Load program performances
            programPerformances = await AnalyticsService.GetProgramPerformancesAsync(facultyId);

            // Load grade distribution
            var gradeDistribution = await AnalyticsService.GetFacultyGradeDistributionAsync(facultyId);

            // Check if we have any data
            hasData = facultyStats.StudentCount > 0 || facultyStats.ProfessorCount > 0 || programPerformances.Any();

            if (hasData)
            {
                // Prepare chart data
                PrepareGradeDistributionData(gradeDistribution);
                PrepareProgramComparisonData();
                PrepareStudentsPerProgramData();
                PrepareAttendancePerProgramData();
                PrepareTrendData();
                await PrepareAtRiskStudentsAsync(facultyId);
            }
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading dean analytics: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void PrepareGradeDistributionData(GradeDistributionDto distribution)
    {
        gradeDistributionData = distribution.Distribution
            .OrderBy(kvp => kvp.Key)
            .Select(kvp => new SmuDonutChart.ChartDataSegment
            {
                Label = $"Nota {kvp.Key}",
                Value = kvp.Value,
                Color = GetGradeColor(kvp.Key)
            })
            .ToList();
    }

    private void PrepareProgramComparisonData()
    {
        programComparisonData = programPerformances
            .Select(p => new SmuBarChart.ChartDataItem
            {
                Label = p.ProgramCode,
                Value = p.AverageGrade
            })
            .ToList();
    }

    private void PrepareStudentsPerProgramData()
    {
        studentsPerProgramData = programPerformances
            .Select(p => new SmuBarChart.ChartDataItem
            {
                Label = p.ProgramCode,
                Value = p.StudentCount
            })
            .ToList();
    }

    private void PrepareAttendancePerProgramData()
    {
        attendancePerProgramData = programPerformances
            .Select(p => new SmuBarChart.ChartDataItem
            {
                Label = p.ProgramCode,
                Value = p.AttendanceRate
            })
            .ToList();
    }

    private void PrepareTrendData()
    {
        // Generate 6 months of historical data (demo)
        var now = DateTime.UtcNow;
        trendData = Enumerable.Range(0, 6)
            .Select(i => new SmuLineChart.ChartDataPoint
            {
                Date = now.AddMonths(-5 + i),
                Value = facultyStats.AverageGrade + (decimal)(new Random().NextDouble() * 0.5 - 0.25)
            })
            .ToList();
    }

    private async Task PrepareAtRiskStudentsAsync(Guid facultyId)
    {
        // Get real at-risk students from RiskScoringService
        var riskScores = await RiskScoringService.GetHighRiskStudentsAsync(facultyId, 20);

        atRiskStudents = riskScores
            .Select(rs => new AtRiskStudentDto
            {
                Name = rs.Student?.User != null
                    ? $"{rs.Student.User.LastName} {rs.Student.User.FirstName}"
                    : "N/A",
                ProgramName = rs.Student?.Group?.Program?.Name ?? "N/A",
                RiskScore = rs.RiskScore,
                GradeRiskFactor = rs.GradeRiskFactor ?? 0,
                AttendanceRiskFactor = rs.AttendanceRiskFactor ?? 0,
                Risk = rs.RiskLevel
            })
            .ToList();
    }

    private async Task OnSemesterChanged()
    {
        await LoadDataAsync();
    }

    private string GetGradeColor(int grade)
    {
        return grade switch
        {
            >= 9 => "#10B981", // emerald-500
            >= 8 => "#84CC16", // lime-500
            >= 7 => "#F59E0B", // amber-500
            >= 6 => "#FB923C", // orange-400
            >= 5 => "#EF4444", // red-500
            _ => "#DC2626"     // red-600
        };
    }

    // Helper class for semester dropdown
    private class SemesterOption
    {
        public string Value { get; set; } = string.Empty;
        public string Text { get; set; } = string.Empty;
    }

    // Helper DTO for at-risk students display
    private class AtRiskStudentDto
    {
        public string Name { get; set; } = string.Empty;
        public string ProgramName { get; set; } = string.Empty;
        public int RiskScore { get; set; }
        public decimal GradeRiskFactor { get; set; }
        public decimal AttendanceRiskFactor { get; set; }
        public RiskLevel Risk { get; set; }
    }
}
