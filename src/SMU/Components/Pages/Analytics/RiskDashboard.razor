@page "/analytics/risk"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using SMU.Data
@using SMU.Services
@using SMU.Data.Entities
@using SMU.Components.Shared.Charts
@attribute [Authorize(Roles = "Dean,Rector,Admin")]

<PageTitle>Tablou Risc Academic - SMU</PageTitle>

<RadzenStack Gap="1.5rem">
    @if (isLoading)
    {
        <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="min-height: 400px;">
            <RadzenProgressBarCircular ShowValue="false" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large" />
            <RadzenText TextStyle="TextStyle.Body1" Style="margin-top: 1rem; color: var(--rz-text-secondary-color);">Se incarca datele...</RadzenText>
        </RadzenStack>
    }
    else if (hasError)
    {
        <RadzenAlert AlertStyle="AlertStyle.Danger" Variant="Variant.Flat" ShowIcon="true" Size="AlertSize.Large">
            <RadzenStack Gap="0.5rem">
                <RadzenText TextStyle="TextStyle.H6" Style="margin: 0;">Eroare la incarcarea datelor</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@errorMessage</RadzenText>
                <RadzenButton Text="Incearca din nou"
                              Icon="refresh"
                              ButtonStyle="ButtonStyle.Danger"
                              Click="@LoadDataAsync"
                              Style="margin-top: 0.5rem; width: fit-content;" />
            </RadzenStack>
        </RadzenAlert>
    }
    else
    {
        <!-- Header -->
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween" Wrap="FlexWrap.Wrap" Gap="1rem">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                <div style="width: 3.5rem; height: 3.5rem; background: rgba(239, 68, 68, 0.1); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                    <RadzenIcon Icon="warning" Style="font-size: 2rem; color: #ef4444;" />
                </div>
                <RadzenStack Gap="0.25rem">
                    <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; font-weight: bold;">Tablou Risc Academic</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Sistem de alertare timpurie pentru studenti la risc</RadzenText>
                </RadzenStack>
            </RadzenStack>

            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                @if (isReactor || isAdmin)
                {
                    <!-- Faculty Filter for Rector/Admin -->
                    <RadzenFormField Text="Facultate" Variant="Variant.Outlined">
                        <RadzenDropDown @bind-Value="selectedFacultyId"
                                        Change="@OnFacultyChanged"
                                        Data="@facultyOptions"
                                        TextProperty="Text"
                                        ValueProperty="Value"
                                        AllowClear="true"
                                        Placeholder="Toate Facultatile"
                                        Style="width: 220px;" />
                    </RadzenFormField>
                }

                <RadzenButton Text="Actualizeaza"
                              Icon="refresh"
                              ButtonStyle="ButtonStyle.Light"
                              Click="@LoadDataAsync"
                              IsBusy="@isLoading"
                              Disabled="@isLoading" />
            </RadzenStack>
        </RadzenStack>

        <!-- KPI Cards Row -->
        <RadzenRow Gap="1.5rem" RowGap="1.5rem">
            <!-- Total Monitored Students -->
            <RadzenColumn Size="12" SizeMD="6" SizeLG="2" Style="min-width: 180px;">
                <RadzenCard Style="padding: 1.5rem; background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%); border: 1px solid #a5b4fc; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: #4f46e5; font-weight: 500;">Total Studenti</RadzenText>
                            <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; color: #312e81; font-weight: bold;">@riskDistribution.TotalStudents</RadzenText>
                        </RadzenStack>
                        <div style="width: 3rem; height: 3rem; background: #a5b4fc; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="people" Style="font-size: 1.5rem; color: #4f46e5;" />
                        </div>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Low Risk -->
            <RadzenColumn Size="12" SizeMD="6" SizeLG="2" Style="min-width: 180px;">
                <RadzenCard Style="padding: 1.5rem; background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); border: 1px solid #86efac; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: #16a34a; font-weight: 500;">Risc Scazut</RadzenText>
                            <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; color: #14532d; font-weight: bold;">@riskDistribution.LowRisk</RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #16a34a;">@($"{riskDistribution.LowRiskPercentage:F1}%")</RadzenText>
                        </RadzenStack>
                        <div style="width: 3rem; height: 3rem; background: #86efac; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="check_circle" Style="font-size: 1.5rem; color: #16a34a;" />
                        </div>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Medium Risk -->
            <RadzenColumn Size="12" SizeMD="6" SizeLG="2" Style="min-width: 180px;">
                <RadzenCard Style="padding: 1.5rem; background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: 1px solid #fcd34d; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: #d97706; font-weight: 500;">Risc Mediu</RadzenText>
                            <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; color: #92400e; font-weight: bold;">@riskDistribution.MediumRisk</RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #d97706;">@($"{riskDistribution.MediumRiskPercentage:F1}%")</RadzenText>
                        </RadzenStack>
                        <div style="width: 3rem; height: 3rem; background: #fcd34d; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="warning" Style="font-size: 1.5rem; color: #d97706;" />
                        </div>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- High Risk -->
            <RadzenColumn Size="12" SizeMD="6" SizeLG="2" Style="min-width: 180px;">
                <RadzenCard Style="padding: 1.5rem; background: linear-gradient(135deg, #ffedd5 0%, #fed7aa 100%); border: 1px solid #fdba74; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: #ea580c; font-weight: 500;">Risc Ridicat</RadzenText>
                            <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; color: #9a3412; font-weight: bold;">@riskDistribution.HighRisk</RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #ea580c;">@($"{riskDistribution.HighRiskPercentage:F1}%")</RadzenText>
                        </RadzenStack>
                        <div style="width: 3rem; height: 3rem; background: #fdba74; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="error" Style="font-size: 1.5rem; color: #ea580c;" />
                        </div>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>

            <!-- Critical Risk -->
            <RadzenColumn Size="12" SizeMD="6" SizeLG="2" Style="min-width: 180px;">
                <RadzenCard Style="padding: 1.5rem; background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%); border: 1px solid #fca5a5; height: 100%;">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                        <RadzenStack Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: #dc2626; font-weight: 500;">Risc Critic</RadzenText>
                            <RadzenText TextStyle="TextStyle.H3" Style="margin: 0; color: #7f1d1d; font-weight: bold;">@riskDistribution.CriticalRisk</RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #dc2626;">@($"{riskDistribution.CriticalRiskPercentage:F1}%")</RadzenText>
                        </RadzenStack>
                        <div style="width: 3rem; height: 3rem; background: #fca5a5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <RadzenIcon Icon="dangerous" Style="font-size: 1.5rem; color: #dc2626;" />
                        </div>
                    </RadzenStack>
                </RadzenCard>
            </RadzenColumn>
        </RadzenRow>

        <!-- Risk Distribution Chart -->
        <RadzenCard Style="padding: 1.5rem;">
            <SmuDonutChart Title="Distributie Niveluri Risc"
                          Data="@riskChartData"
                          IsLoading="@isLoading"
                          Height="400" />
        </RadzenCard>

        <!-- Early Warning List -->
        <RadzenCard Style="padding: 0; overflow: hidden;">
            <div style="padding: 1rem 1.5rem; border-bottom: 1px solid var(--rz-border-color);">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                    <RadzenStack Gap="0.25rem">
                        <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">Lista Alerta Timpurie - Top 20 Studenti la Risc</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Studenti cu risc ridicat sau critic care necesita interventie</RadzenText>
                    </RadzenStack>
                    <RadzenBadge BadgeStyle="BadgeStyle.Danger" Text="@($"{highRiskStudents.Count} studenti")" />
                </RadzenStack>
            </div>

            @if (highRiskStudents.Any())
            {
                <RadzenDataGrid Data="@highRiskStudents" TItem="StudentRiskScore" Style="border: none;">
                    <Columns>
                        <RadzenDataGridColumn TItem="StudentRiskScore" Title="Student" Width="200px">
                            <Template Context="riskScore">
                                <RadzenStack Gap="0.125rem">
                                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; font-weight: 500;">@riskScore.Student.User.FullName</RadzenText>
                                    <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">@riskScore.Student.StudentNumber</RadzenText>
                                </RadzenStack>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="StudentRiskScore" Title="Grupa" Width="120px">
                            <Template Context="riskScore">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@(riskScore.Student.Group?.Name ?? "Nealocata")</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="StudentRiskScore" Property="RiskScore" Title="Scor Risc" Width="100px">
                            <Template Context="riskScore">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; font-weight: 600;">@riskScore.RiskScore / 100</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="StudentRiskScore" Property="RiskLevel" Title="Nivel" Width="120px">
                            <Template Context="riskScore">
                                <RadzenBadge BadgeStyle="@GetRiskBadgeStyle(riskScore.RiskLevel)"
                                             Text="@GetRiskLevelText(riskScore.RiskLevel)"
                                             IsPill="true" />
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="StudentRiskScore" Title="Factori Principali" Width="250px">
                            <Template Context="riskScore">
                                <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">@GetTopRiskFactors(riskScore)</RadzenText>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="StudentRiskScore" Title="Actiuni" Width="200px" TextAlign="TextAlign.End">
                            <Template Context="riskScore">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.25rem">
                                    <RadzenButton Text="Detalii"
                                                  ButtonStyle="ButtonStyle.Info"
                                                  Variant="Variant.Text"
                                                  Size="ButtonSize.Small"
                                                  Click="@(() => ViewStudentDetails(riskScore.StudentId))" />
                                    <RadzenButton Text="Notifica"
                                                  ButtonStyle="ButtonStyle.Warning"
                                                  Variant="Variant.Text"
                                                  Size="ButtonSize.Small"
                                                  Click="@(() => NotifyStakeholders(riskScore.StudentId))" />
                                    <RadzenButton Text="Interventie"
                                                  ButtonStyle="ButtonStyle.Success"
                                                  Variant="Variant.Text"
                                                  Size="ButtonSize.Small"
                                                  Click="@(() => RecordIntervention(riskScore.StudentId))" />
                                </RadzenStack>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            }
            else
            {
                <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="padding: 3rem;">
                    <RadzenIcon Icon="check_circle" Style="font-size: 3rem; color: var(--rz-success);" />
                    <RadzenText TextStyle="TextStyle.Body2" Style="margin-top: 1rem; color: var(--rz-text-secondary-color);">Nu exista studenti in risc ridicat sau critic</RadzenText>
                </RadzenStack>
            }
        </RadzenCard>

        <!-- Active Alerts Section -->
        <RadzenCard Style="padding: 0; overflow: hidden;">
            <div style="padding: 1rem 1.5rem; border-bottom: 1px solid var(--rz-border-color);">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
                    <RadzenStack Gap="0.25rem">
                        <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; font-weight: 600;">Alerte Active</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Alerte neconfirmate care necesita atentie</RadzenText>
                    </RadzenStack>
                    <RadzenBadge BadgeStyle="BadgeStyle.Warning" Text="@($"{activeAlerts.Count} alerte")" />
                </RadzenStack>
            </div>

            @if (activeAlerts.Any())
            {
                <RadzenStack Gap="0" Style="padding: 1rem;">
                    @foreach (var alert in activeAlerts)
                    {
                        <RadzenCard Style="padding: 1rem; margin-bottom: 0.75rem;">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="1rem">
                                <div style="flex-shrink: 0; margin-top: 0.25rem;">
                                    <RadzenIcon Icon="warning" Style="@($"font-size: 1.5rem; color: {GetAlertIconColor(alert.RiskLevel)};")" />
                                </div>
                                <RadzenStack Gap="0.5rem" Style="flex: 1; min-width: 0;">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.75rem" Wrap="FlexWrap.Wrap">
                                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; font-weight: 600;">@alert.Student.User.FullName</RadzenText>
                                        <RadzenBadge BadgeStyle="@GetRiskBadgeStyle(alert.RiskLevel)"
                                                     Text="@GetRiskLevelText(alert.RiskLevel)"
                                                     IsPill="true" />
                                        <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">@alert.AlertType</RadzenText>
                                    </RadzenStack>
                                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">@alert.Message</RadzenText>
                                    <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: var(--rz-text-secondary-color);">Creat: @alert.CreatedAt.ToString("dd MMM yyyy HH:mm")</RadzenText>
                                </RadzenStack>
                                <RadzenButton Text="Confirma"
                                              Icon="check"
                                              ButtonStyle="ButtonStyle.Success"
                                              Size="ButtonSize.Small"
                                              Click="@(() => AcknowledgeAlert(alert.Id))" />
                            </RadzenStack>
                        </RadzenCard>
                    }
                </RadzenStack>
            }
            else
            {
                <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="padding: 3rem;">
                    <RadzenIcon Icon="check_circle" Style="font-size: 3rem; color: var(--rz-success);" />
                    <RadzenText TextStyle="TextStyle.Body2" Style="margin-top: 1rem; color: var(--rz-text-secondary-color);">Nu exista alerte active</RadzenText>
                </RadzenStack>
            }
        </RadzenCard>
    }
</RadzenStack>

@code {
    [Inject] private IRiskScoringService RiskScoringService { get; set; } = default!;
    [Inject] private IAlertService AlertService { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = default!;
    [Inject] private ApplicationDbContext DbContext { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private bool isLoading = true;
    private bool hasError = false;
    private string errorMessage = string.Empty;
    private bool isReactor = false;
    private bool isAdmin = false;
    private Guid? currentUserFacultyId = null;

    // Faculty selection for Rector/Admin
    private string selectedFacultyId = string.Empty;
    private List<Faculty> faculties = new();
    private List<FacultyOption> facultyOptions = new();

    // Data
    private RiskDistributionDto riskDistribution = new();
    private List<StudentRiskScore> highRiskStudents = new();
    private List<RiskAlert> activeAlerts = new();

    // Chart Data
    private List<SmuDonutChart.ChartDataSegment> riskChartData = new();

    private class FacultyOption
    {
        public string Value { get; set; } = "";
        public string Text { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        hasError = false;
        errorMessage = string.Empty;

        try
        {
            // Get authenticated user info
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            isReactor = user.IsInRole("Rector");
            isAdmin = user.IsInRole("Admin");

            // Get faculty ID for Dean
            if (user.IsInRole("Dean") && !isReactor && !isAdmin)
            {
                var facultyIdClaim = user.FindFirst("FacultyId")?.Value;
                if (!string.IsNullOrEmpty(facultyIdClaim) && Guid.TryParse(facultyIdClaim, out var facultyId))
                {
                    currentUserFacultyId = facultyId;
                }
            }

            // Load faculties for Rector/Admin
            if (isReactor || isAdmin)
            {
                faculties = await DbContext.Faculties
                    .Where(f => f.IsActive)
                    .OrderBy(f => f.Name)
                    .ToListAsync();

                facultyOptions = faculties.Select(f => new FacultyOption
                {
                    Value = f.Id.ToString(),
                    Text = f.Name
                }).ToList();
            }

            // Determine which faculty to query
            Guid? queryFacultyId = null;
            if (currentUserFacultyId.HasValue)
            {
                // Dean can only see their faculty
                queryFacultyId = currentUserFacultyId.Value;
            }
            else if (!string.IsNullOrEmpty(selectedFacultyId) && Guid.TryParse(selectedFacultyId, out var selectedId))
            {
                // Rector/Admin selected a specific faculty
                queryFacultyId = selectedId;
            }
            // Otherwise queryFacultyId is null = all faculties

            // Load risk distribution
            riskDistribution = await RiskScoringService.GetRiskDistributionAsync(queryFacultyId);

            // Load high-risk students (top 20)
            highRiskStudents = await RiskScoringService.GetHighRiskStudentsAsync(queryFacultyId, limit: 20);

            // Load active alerts
            activeAlerts = await AlertService.GetActiveAlertsAsync(queryFacultyId);

            // Prepare chart data
            PrepareRiskChartData();
        }
        catch (Exception ex)
        {
            hasError = true;
            errorMessage = $"Eroare la incarcarea datelor: {ex.Message}";
            Console.WriteLine($"Error loading risk dashboard: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void PrepareRiskChartData()
    {
        riskChartData = new List<SmuDonutChart.ChartDataSegment>
        {
            new() { Label = "Risc Scazut", Value = riskDistribution.LowRisk, Color = "#10B981" },
            new() { Label = "Risc Mediu", Value = riskDistribution.MediumRisk, Color = "#F59E0B" },
            new() { Label = "Risc Ridicat", Value = riskDistribution.HighRisk, Color = "#FB923C" },
            new() { Label = "Risc Critic", Value = riskDistribution.CriticalRisk, Color = "#EF4444" }
        };
    }

    private async Task OnFacultyChanged()
    {
        await LoadDataAsync();
    }

    private BadgeStyle GetRiskBadgeStyle(RiskLevel level) => level switch
    {
        RiskLevel.Low => BadgeStyle.Success,
        RiskLevel.Medium => BadgeStyle.Warning,
        RiskLevel.High => BadgeStyle.Warning,
        RiskLevel.Critical => BadgeStyle.Danger,
        _ => BadgeStyle.Light
    };

    private string GetRiskLevelText(RiskLevel level) => level switch
    {
        RiskLevel.Low => "Scazut",
        RiskLevel.Medium => "Mediu",
        RiskLevel.High => "Ridicat",
        RiskLevel.Critical => "Critic",
        _ => "-"
    };

    private string GetAlertIconColor(RiskLevel level) => level switch
    {
        RiskLevel.Critical => "#dc2626",
        RiskLevel.High => "#ea580c",
        RiskLevel.Medium => "#d97706",
        _ => "#16a34a"
    };

    private string GetTopRiskFactors(StudentRiskScore riskScore)
    {
        var factors = new List<string>();

        if (riskScore.GradeRiskFactor > 0.5m)
            factors.Add("Note scazute");

        if (riskScore.AttendanceRiskFactor > 0.5m)
            factors.Add("Absente frecvente");

        if (riskScore.TrendRiskFactor > 0.5m)
            factors.Add("Trend descrescator");

        if (riskScore.EngagementRiskFactor > 0.5m)
            factors.Add("Engagement scazut");

        return factors.Any() ? string.Join(", ", factors) : "N/A";
    }

    private void ViewStudentDetails(Guid studentId)
    {
        NavigationManager.NavigateTo($"/students/details/{studentId}");
    }

    private async Task NotifyStakeholders(Guid studentId)
    {
        try
        {
            // Create alert and notify stakeholders
            var alert = await AlertService.CreateRiskAlertAsync(
                studentId,
                RiskLevel.High,
                "ManualNotification",
                "Notificare manuala de catre utilizator din Risk Dashboard");

            await AlertService.NotifyStakeholdersAsync(alert.Id);

            // Reload data
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error notifying stakeholders: {ex.Message}");
        }
    }

    private void RecordIntervention(Guid studentId)
    {
        // Navigate to intervention recording page (to be implemented)
        NavigationManager.NavigateTo($"/students/intervention/{studentId}");
    }

    private async Task AcknowledgeAlert(Guid alertId)
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userIdClaim) && Guid.TryParse(userIdClaim, out var userId))
            {
                await AlertService.AcknowledgeAlertAsync(alertId, userId);

                // Reload data
                await LoadDataAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error acknowledging alert: {ex.Message}");
        }
    }
}
