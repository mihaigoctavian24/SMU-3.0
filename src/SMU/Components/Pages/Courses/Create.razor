@page "/cursuri/nou"
@using SMU.Models
@using SMU.Services
@using Microsoft.AspNetCore.Authorization
@inject ICourseService CourseService
@inject NavigationManager Navigation
@attribute [Authorize(Policy = "CanManageStudents")]

<PageTitle>Curs Nou - SMU</PageTitle>

<div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center space-x-4">
        <button @onclick='() => Navigation.NavigateTo("/cursuri")'
                class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </button>
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Adaugă Curs Nou</h1>
            <p class="mt-1 text-sm text-gray-600">Completează formularul pentru a crea un curs nou</p>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="bg-danger-50 border border-danger-200 rounded-lg p-4">
            <div class="flex">
                <svg class="h-5 w-5 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="ml-3">
                    <p class="text-sm text-danger-700">@errorMessage</p>
                </div>
            </div>
        </div>
    }

    <!-- Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="space-y-6">
                <!-- Course Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Nume Curs <span class="text-danger-500">*</span>
                    </label>
                    <InputText @bind-Value="model.Name"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                               placeholder="ex: Programare Orientată pe Obiecte" />
                    <ValidationMessage For="@(() => model.Name)" class="text-sm text-danger-600 mt-1" />
                </div>

                <!-- Course Code -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Cod Curs <span class="text-danger-500">*</span>
                    </label>
                    <InputText @bind-Value="model.Code"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent font-mono"
                               placeholder="ex: POO-101" />
                    <ValidationMessage For="@(() => model.Code)" class="text-sm text-danger-600 mt-1" />
                    <p class="mt-1 text-sm text-gray-500">Codul trebuie să fie unic în sistem</p>
                </div>

                <!-- Program -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Program de Studii <span class="text-danger-500">*</span>
                    </label>
                    <InputSelect @bind-Value="model.ProgramId"
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Selectează programul</option>
                        @foreach (var program in programs)
                        {
                            <option value="@program.Id">@program.Name (@program.Code)</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => model.ProgramId)" class="text-sm text-danger-600 mt-1" />
                </div>

                <!-- Professor -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Profesor (opțional)
                    </label>
                    <select @bind="selectedProfessorId"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Neasignat</option>
                        @foreach (var professor in professors)
                        {
                            <option value="@professor.Id">
                                @professor.FullName @(!string.IsNullOrEmpty(professor.Title) ? $"({professor.Title})" : "")
                            </option>
                        }
                    </select>
                    <p class="mt-1 text-sm text-gray-500">Poți asigna profesorul mai târziu</p>
                </div>

                <!-- Credits, Year, Semester Row -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Credits -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Credite ECTS <span class="text-danger-500">*</span>
                        </label>
                        <InputNumber @bind-Value="model.Credits"
                                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                     min="1" max="10" />
                        <ValidationMessage For="@(() => model.Credits)" class="text-sm text-danger-600 mt-1" />
                    </div>

                    <!-- Year -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            An de Studiu <span class="text-danger-500">*</span>
                        </label>
                        <InputSelect @bind-Value="model.Year"
                                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="1">Anul 1</option>
                            <option value="2">Anul 2</option>
                            <option value="3">Anul 3</option>
                            <option value="4">Anul 4</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => model.Year)" class="text-sm text-danger-600 mt-1" />
                    </div>

                    <!-- Semester -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Semestru <span class="text-danger-500">*</span>
                        </label>
                        <InputSelect @bind-Value="model.Semester"
                                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="1">Semestrul 1</option>
                            <option value="2">Semestrul 2</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => model.Semester)" class="text-sm text-danger-600 mt-1" />
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Descriere (opțional)
                    </label>
                    <InputTextArea @bind-Value="model.Description"
                                   rows="4"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                                   placeholder="Descriere scurtă a cursului, obiective, conținut..." />
                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
                    <button type="button"
                            @onclick='() => Navigation.NavigateTo("/cursuri")'
                            class="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors">
                        Anulează
                    </button>
                    <button type="submit"
                            disabled="@isSaving"
                            class="inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 disabled:bg-gray-400 text-white text-sm font-medium rounded-lg transition-colors">
                        @if (isSaving)
                        {
                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Se salvează...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span>Salvează Curs</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private CreateCourseDto model = new() { Credits = 5, Year = 1, Semester = 1 };
    private List<ProgramOption> programs = new();
    private List<ProfessorOption> professors = new();
    private string? selectedProfessorId;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        programs = await CourseService.GetProgramOptionsAsync();
        professors = await CourseService.GetProfessorOptionsAsync();
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            // Set professor ID if selected
            if (!string.IsNullOrEmpty(selectedProfessorId) && Guid.TryParse(selectedProfessorId, out var professorId))
            {
                model.ProfessorId = professorId;
            }

            var result = await CourseService.CreateAsync(model);

            if (result.Succeeded)
            {
                Navigation.NavigateTo($"/cursuri/{result.Data}");
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = "A apărut o eroare neașteptată. Te rugăm să încerci din nou.";
        }
        finally
        {
            isSaving = false;
        }
    }
}
