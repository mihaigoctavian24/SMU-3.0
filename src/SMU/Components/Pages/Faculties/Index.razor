@page "/facultati"
@using Microsoft.AspNetCore.Authorization
@using SMU.Services
@using SMU.Services.DTOs
@using SMU.Data.Entities
@attribute [Authorize(Policy = "CanManageFaculties")]
@inject IFacultyService FacultyService
@inject NavigationManager Navigation

<PageTitle>Facultăți - SMU</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Facultăți</h1>
            <p class="mt-1 text-sm text-gray-500">Gestionează facultățile din universitate</p>
        </div>
        <a href="/facultati/nou" class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg font-medium transition-colors flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <span>Adaugă Facultate</span>
        </a>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Căutare</label>
                <input type="text"
                       @bind="searchTerm"
                       @bind:event="oninput"
                       @onkeyup="HandleSearchKeyUp"
                       placeholder="Nume sau cod facultate..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>

            <!-- Status Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select @bind="selectedStatus" @bind:after="ApplyFilters" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Toate statusurile</option>
                    <option value="true">Activ</option>
                    <option value="false">Inactiv</option>
                </select>
            </div>

            <!-- Export -->
            <div class="flex items-end">
                <button @onclick="ExportToCSV" class="w-full px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors flex items-center justify-center space-x-2">
                    <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <span>Export CSV</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Faculties Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        @if (isLoading)
        {
            <div class="flex items-center justify-center py-12">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        }
        else if (faculties.Items.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-100">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" @onclick='() => SortBy("Name")'>
                                Nume
                                @if (sortColumn == "Name")
                                {
                                    <span class="ml-1">@(sortAscending ? "↑" : "↓")</span>
                                }
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100" @onclick='() => SortBy("Code")'>
                                Cod
                                @if (sortColumn == "Code")
                                {
                                    <span class="ml-1">@(sortAscending ? "↑" : "↓")</span>
                                }
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Decan</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Programe</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Studenți</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        @foreach (var faculty in faculties.Items)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @faculty.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @faculty.Code
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(faculty.DeanName ?? "Neasignat")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @faculty.ProgramsCount
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @faculty.StudentsCount
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full @(faculty.IsActive ? "bg-success-100 text-success-700" : "bg-gray-100 text-gray-700")">
                                        @(faculty.IsActive ? "Activ" : "Inactiv")
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                    <a href="/facultati/@faculty.Id" class="text-primary-600 hover:text-primary-900">Vezi</a>
                                    <a href="/facultati/@faculty.Id/editare" class="text-gray-600 hover:text-gray-900">Editează</a>
                                    <button @onclick="() => ConfirmDelete(faculty.Id)" class="text-red-600 hover:text-red-900">Șterge</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
                <div class="flex items-center space-x-2">
                    <span class="text-sm text-gray-700">
                        Afișează
                    </span>
                    <select @bind="pageSize" @bind:after="ApplyFilters" class="px-3 py-1 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                    </select>
                    <span class="text-sm text-gray-700">
                        din @faculties.TotalCount facultăți
                    </span>
                </div>

                <div class="flex items-center space-x-2">
                    <button @onclick="PreviousPage"
                            disabled="@(!faculties.HasPreviousPage)"
                            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                        Anterior
                    </button>
                    <span class="text-sm text-gray-700">
                        Pagina @faculties.Page din @faculties.TotalPages
                    </span>
                    <button @onclick="NextPage"
                            disabled="@(!faculties.HasNextPage)"
                            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                        Următorul
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="px-6 py-12 text-center">
                <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                <p class="text-gray-500">Nu au fost găsite facultăți</p>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" @onclick="CancelDelete">
        <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4 p-6" @onclick:stopPropagation>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Confirmare Ștergere</h3>
            <p class="text-gray-600 mb-6">Ești sigur că vrei să ștergi această facultate? Statusul va fi schimbat în "Inactiv".</p>
            <div class="flex space-x-3 justify-end">
                <button @onclick="CancelDelete" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors">
                    Anulează
                </button>
                <button @onclick="DeleteFaculty" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium transition-colors">
                    Șterge
                </button>
            </div>
        </div>
    </div>
}

@code {
    private PagedResult<FacultyListDto> faculties = new();
    private bool isLoading = true;

    // Filters
    private string searchTerm = "";
    private string selectedStatus = "";
    private int currentPage = 1;
    private int pageSize = 25;

    // Sorting
    private string sortColumn = "Name";
    private bool sortAscending = true;

    // Delete modal
    private bool showDeleteModal = false;
    private Guid facultyToDelete = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadFaculties();
    }

    private async Task LoadFaculties()
    {
        isLoading = true;
        StateHasChanged();

        var filter = new FacultyFilter
        {
            Search = string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
            IsActive = string.IsNullOrWhiteSpace(selectedStatus) ? null : bool.Parse(selectedStatus)
        };

        faculties = await FacultyService.GetAllAsync(filter, currentPage, pageSize);

        // Apply client-side sorting if needed
        if (!string.IsNullOrEmpty(sortColumn))
        {
            faculties.Items = sortColumn switch
            {
                "Name" => sortAscending
                    ? faculties.Items.OrderBy(f => f.Name).ToList()
                    : faculties.Items.OrderByDescending(f => f.Name).ToList(),
                "Code" => sortAscending
                    ? faculties.Items.OrderBy(f => f.Code).ToList()
                    : faculties.Items.OrderByDescending(f => f.Code).ToList(),
                _ => faculties.Items
            };
        }

        isLoading = false;
        StateHasChanged();
    }

    private System.Threading.Timer? searchTimer;

    private void HandleSearchKeyUp()
    {
        searchTimer?.Dispose();
        searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadFaculties());
        }, null, 500, Timeout.Infinite);
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadFaculties();
    }

    private async Task SortBy(string column)
    {
        if (sortColumn == column)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            sortColumn = column;
            sortAscending = true;
        }
        await LoadFaculties();
    }

    private async Task NextPage()
    {
        if (faculties.HasNextPage)
        {
            currentPage++;
            await LoadFaculties();
        }
    }

    private async Task PreviousPage()
    {
        if (faculties.HasPreviousPage)
        {
            currentPage--;
            await LoadFaculties();
        }
    }

    private void ConfirmDelete(Guid id)
    {
        facultyToDelete = id;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        facultyToDelete = Guid.Empty;
    }

    private async Task DeleteFaculty()
    {
        var result = await FacultyService.DeleteAsync(facultyToDelete);
        showDeleteModal = false;
        facultyToDelete = Guid.Empty;

        if (result.Succeeded)
        {
            await LoadFaculties();
        }
    }

    private async Task ExportToCSV()
    {
        var filter = new FacultyFilter
        {
            Search = string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
            IsActive = string.IsNullOrWhiteSpace(selectedStatus) ? null : bool.Parse(selectedStatus)
        };

        var allFaculties = await FacultyService.ExportAsync(filter);

        var csv = "Nume,Cod,Decan,Programe,Studenți,Status\n";
        foreach (var faculty in allFaculties)
        {
            csv += $"{faculty.Name},{faculty.Code},{faculty.DeanName ?? "Neasignat"},{faculty.ProgramsCount},{faculty.StudentsCount},{(faculty.IsActive ? "Activ" : "Inactiv")}\n";
        }

        Console.WriteLine($"CSV Export: {allFaculties.Count} facultăți");
    }

    public void Dispose()
    {
        searchTimer?.Dispose();
    }
}
