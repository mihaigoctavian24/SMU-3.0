@page "/cereri"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@using SMU.Data
@using SMU.Data.Entities
@using SMU.Services
@using SMU.Services.DTOs
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject IDocumentRequestService RequestService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">
                @if (CurrentRole == UserRole.Student)
                {
                    <text>Cererile Mele</text>
                }
                else
                {
                    <text>Cereri Documente</text>
                }
            </h1>
            <p class="mt-1 text-sm text-gray-600">
                @if (CurrentRole == UserRole.Student)
                {
                    <text>Gestionează cererile tale de documente</text>
                }
                else
                {
                    <text>Procesează cererile studenților</text>
                }
            </p>
        </div>

        @if (CurrentRole == UserRole.Student)
        {
            <a href="/cereri/adauga" class="inline-flex items-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Cerere Nouă
            </a>
        }
    </div>

    <!-- Filters (for Secretary/Admin) -->
    @if (CurrentRole != UserRole.Student)
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tip Document</label>
                    <select @bind="SelectedType" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Toate tipurile</option>
                        <option value="StudentCertificate">Adeverință de Student</option>
                        <option value="GradeReport">Adeverință cu Note</option>
                        <option value="EnrollmentProof">Foaie Matricolă</option>
                        <option value="Other">Altele</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select @bind="SelectedStatus" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Toate statusurile</option>
                        <option value="Pending">În așteptare</option>
                        <option value="Approved">Aprobat</option>
                        <option value="Rejected">Respins</option>
                    </select>
                </div>

                <div class="flex items-end">
                    <button @onclick="ApplyFilters" class="w-full px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors">
                        Aplică Filtre
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Requests Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        @if (IsLoading)
        {
            <div class="p-8 text-center">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                <p class="mt-2 text-gray-600">Se încarcă...</p>
            </div>
        }
        else if (FilteredRequests.Count == 0)
        {
            <div class="p-8 text-center text-gray-500">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="mt-2">Nu există cereri înregistrate.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            @if (CurrentRole != UserRole.Student)
                            {
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
                            }
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tip Document</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Cererii</th>
                            @if (CurrentRole != UserRole.Student)
                            {
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Procesat De</th>
                            }
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var request in FilteredRequests)
                        {
                            <tr class="hover:bg-gray-50">
                                @if (CurrentRole != UserRole.Student)
                                {
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@request.StudentName</div>
                                        <div class="text-sm text-gray-500">@request.StudentNumber</div>
                                    </td>
                                }
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@request.TypeLabel</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@GetStatusBadgeClass(request.Status)">
                                        @request.StatusLabel
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @request.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                @if (CurrentRole != UserRole.Student)
                                {
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        @if (request.ProcessedByName != null)
                                        {
                                            <div>@request.ProcessedByName</div>
                                            <div class="text-xs">@request.ProcessedAt?.ToString("dd.MM.yyyy HH:mm")</div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                }
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    @if (CurrentRole == UserRole.Student && request.Status == RequestStatus.Pending)
                                    {
                                        <button @onclick="() => CancelRequest(request.Id)" class="text-danger-600 hover:text-danger-900">
                                            Anulează
                                        </button>
                                    }
                                    else if (CurrentRole != UserRole.Student && request.Status == RequestStatus.Pending)
                                    {
                                        <a href="/cereri/proceseaza/@request.Id" class="text-primary-600 hover:text-primary-900">
                                            Procesează
                                        </a>
                                    }
                                    @if (!string.IsNullOrEmpty(request.Notes))
                                    {
                                        <button @onclick="() => ShowNotes(request)" class="ml-3 text-info-600 hover:text-info-900">
                                            Detalii
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (ShowNotesModal && SelectedRequest != null)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CloseNotesModal">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white" @onclick:stopPropagation="true">
            <div class="mt-3">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Detalii Cerere</h3>
                <div class="space-y-3">
                    <div>
                        <span class="text-sm font-medium text-gray-700">Student:</span>
                        <p class="text-sm text-gray-900">@SelectedRequest.StudentName</p>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-700">Tip:</span>
                        <p class="text-sm text-gray-900">@SelectedRequest.TypeLabel</p>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-700">Status:</span>
                        <p class="text-sm">
                            <span class="@GetStatusBadgeClass(SelectedRequest.Status)">@SelectedRequest.StatusLabel</span>
                        </p>
                    </div>
                    @if (!string.IsNullOrEmpty(SelectedRequest.Notes))
                    {
                        <div>
                            <span class="text-sm font-medium text-gray-700">Observații:</span>
                            <p class="text-sm text-gray-900 whitespace-pre-wrap">@SelectedRequest.Notes</p>
                        </div>
                    }
                </div>
                <div class="mt-6">
                    <button @onclick="CloseNotesModal" class="w-full px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg transition-colors">
                        Închide
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DocumentRequestDto> Requests = new();
    private List<DocumentRequestDto> FilteredRequests = new();
    private bool IsLoading = true;
    private UserRole CurrentRole;
    private Guid CurrentUserId;
    private Guid? CurrentStudentId;

    // Filters
    private string SelectedType = "";
    private string SelectedStatus = "";

    // Modal
    private bool ShowNotesModal = false;
    private DocumentRequestDto? SelectedRequest;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userId = Guid.Parse(user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "");
            var roleClaim = user.FindFirst("Role")?.Value;

            CurrentUserId = userId;
            CurrentRole = Enum.Parse<UserRole>(roleClaim ?? "Student");

            await LoadData();
        }
    }

    private async Task LoadData()
    {
        IsLoading = true;

        if (CurrentRole == UserRole.Student)
        {
            var student = await DbContext.Students.FirstOrDefaultAsync(s => s.UserId == CurrentUserId);
            if (student != null)
            {
                CurrentStudentId = student.Id;
                Requests = await RequestService.GetByStudentAsync(student.Id);
            }
        }
        else if (CurrentRole == UserRole.Secretary || CurrentRole == UserRole.Dean || CurrentRole == UserRole.Admin)
        {
            // Secretary sees all pending requests
            Requests = await RequestService.GetPendingAsync();
        }

        FilteredRequests = Requests;
        IsLoading = false;
    }

    private void ApplyFilters()
    {
        FilteredRequests = Requests;

        if (!string.IsNullOrEmpty(SelectedType))
        {
            var type = Enum.Parse<RequestType>(SelectedType);
            FilteredRequests = FilteredRequests.Where(r => r.Type == type).ToList();
        }

        if (!string.IsNullOrEmpty(SelectedStatus))
        {
            var status = Enum.Parse<RequestStatus>(SelectedStatus);
            FilteredRequests = FilteredRequests.Where(r => r.Status == status).ToList();
        }
    }

    private async Task CancelRequest(Guid requestId)
    {
        if (CurrentStudentId == null) return;

        var confirmed = await JS.InvokeAsync<bool>("confirm", "Sigur doriți să anulați această cerere?");
        if (confirmed)
        {
            var result = await RequestService.CancelAsync(requestId, CurrentStudentId.Value);
            if (result.Succeeded)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", result.ErrorMessage ?? "Eroare la anularea cererii.");
            }
        }
    }

    private void ShowNotes(DocumentRequestDto request)
    {
        SelectedRequest = request;
        ShowNotesModal = true;
    }

    private void CloseNotesModal()
    {
        ShowNotesModal = false;
        SelectedRequest = null;
    }

    private string GetStatusBadgeClass(RequestStatus status)
    {
        return status switch
        {
            RequestStatus.Pending => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-warning-100 text-warning-700",
            RequestStatus.InProgress => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-info-100 text-info-700",
            RequestStatus.Approved => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success-100 text-success-700",
            RequestStatus.Rejected => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-danger-100 text-danger-700",
            RequestStatus.Completed => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success-100 text-success-700",
            _ => "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700"
        };
    }
}
