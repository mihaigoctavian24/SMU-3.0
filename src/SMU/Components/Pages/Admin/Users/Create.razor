@page "/admin/utilizatori/nou"
@using Microsoft.AspNetCore.Authorization
@using SMU.Services
@using SMU.Services.DTOs
@using SMU.Data.Entities
@using Microsoft.EntityFrameworkCore
@using SMU.Data
@attribute [Authorize(Policy = "CanManageUsers")]
@inject IUserService UserService
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation

<PageTitle>Utilizator Nou - SMU</PageTitle>

<div class="max-w-3xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center space-x-4">
        <a href="/admin/utilizatori" class="text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
        </a>
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Utilizator Nou</h1>
            <p class="mt-1 text-sm text-gray-500">Creează un nou cont de utilizator</p>
        </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="space-y-6">
                <!-- Email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                    <InputText @bind-Value="model.Email"
                               placeholder="exemplu@smu.edu"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                    <ValidationMessage For="@(() => model.Email)" class="text-sm text-red-600 mt-1" />
                </div>

                <!-- First Name & Last Name -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Prenume *</label>
                        <InputText @bind-Value="model.FirstName"
                                   placeholder="Ion"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                        <ValidationMessage For="@(() => model.FirstName)" class="text-sm text-red-600 mt-1" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Nume *</label>
                        <InputText @bind-Value="model.LastName"
                                   placeholder="Popescu"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                        <ValidationMessage For="@(() => model.LastName)" class="text-sm text-red-600 mt-1" />
                    </div>
                </div>

                <!-- Password -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Parolă *</label>
                    <div class="flex space-x-2">
                        <InputText type="password"
                                   @bind-Value="model.Password"
                                   placeholder="Minimum 8 caractere"
                                   class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                        <button type="button"
                                @onclick="GeneratePassword"
                                class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors">
                            Generează
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.Password)" class="text-sm text-red-600 mt-1" />
                    @if (showGeneratedPassword)
                    {
                        <p class="text-sm text-success-600 mt-1">Parolă generată: @model.Password</p>
                    }
                </div>

                <!-- Role -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Rol *</label>
                    <InputSelect @bind-Value="model.Role"
                                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <option value="">Selectează rol...</option>
                        <option value="@UserRole.Admin">Administrator</option>
                        <option value="@UserRole.Rector">Rector</option>
                        <option value="@UserRole.Dean">Decan</option>
                        <option value="@UserRole.Secretary">Secretar</option>
                        <option value="@UserRole.Professor">Profesor</option>
                        <option value="@UserRole.Student">Student</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => model.Role)" class="text-sm text-red-600 mt-1" />
                    <p class="text-sm text-gray-500 mt-1">@GetRoleDescription(model.Role)</p>
                </div>

                <!-- Faculty Selection (only for Professor role) -->
                @if (model.Role == UserRole.Professor)
                {
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Facultate *</label>
                        <InputSelect @bind-Value="model.FacultyId"
                                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                            <option value="">Selectează facultate...</option>
                            @foreach (var faculty in faculties)
                            {
                                <option value="@faculty.Id">@faculty.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => model.FacultyId)" class="text-sm text-red-600 mt-1" />
                    </div>
                }

                <!-- Error Message -->
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <p class="text-sm text-red-800">@errorMessage</p>
                    </div>
                }

                <!-- Success Message -->
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="bg-success-50 border border-success-200 rounded-lg p-4">
                        <p class="text-sm text-success-800">@successMessage</p>
                    </div>
                }

                <!-- Actions -->
                <div class="flex justify-end space-x-3 pt-4">
                    <a href="/admin/utilizatori" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 font-medium transition-colors">
                        Anulează
                    </a>
                    <button type="submit"
                            disabled="@isSubmitting"
                            class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (isSubmitting)
                        {
                            <span>Se creează...</span>
                        }
                        else
                        {
                            <span>Creează Utilizator</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private CreateUserDto model = new() { Role = UserRole.Student };
    private List<Faculty> faculties = new();
    private bool isSubmitting = false;
    private bool showGeneratedPassword = false;
    private string errorMessage = "";
    private string successMessage = "";

    private class Faculty
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadFaculties();
    }

    private async Task LoadFaculties()
    {
        faculties = await DbContext.Faculties
            .Select(f => new Faculty { Id = f.Id, Name = f.Name })
            .OrderBy(f => f.Name)
            .ToListAsync();
    }

    private void GeneratePassword()
    {
        const string chars = "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnpqrstuvwxyz23456789!@#$%";
        var random = new Random();
        var password = new char[12];

        // Ensure password has at least one uppercase, one lowercase, one digit, one special char
        password[0] = chars[random.Next(0, 26)]; // Uppercase
        password[1] = chars[random.Next(26, 52)]; // Lowercase
        password[2] = chars[random.Next(52, 62)]; // Digit
        password[3] = chars[random.Next(62, chars.Length)]; // Special

        // Fill the rest randomly
        for (int i = 4; i < 12; i++)
        {
            password[i] = chars[random.Next(chars.Length)];
        }

        // Shuffle the password
        for (int i = password.Length - 1; i > 0; i--)
        {
            int j = random.Next(i + 1);
            (password[i], password[j]) = (password[j], password[i]);
        }

        model.Password = new string(password);
        showGeneratedPassword = true;
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = "";
        successMessage = "";
        showGeneratedPassword = false;
        StateHasChanged();

        try
        {
            var result = await UserService.CreateAsync(model);

            if (result.Succeeded)
            {
                successMessage = "Utilizatorul a fost creat cu succes!";
                StateHasChanged();
                await Task.Delay(1500);
                Navigation.NavigateTo("/admin/utilizatori");
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Eroare la crearea utilizatorului.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Eroare la crearea utilizatorului. Vă rugăm încercați din nou.";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private string GetRoleDescription(UserRole role) => role switch
    {
        UserRole.Admin => "Acces complet la sistem, gestionare utilizatori și configurări",
        UserRole.Rector => "Statistici la nivel de universitate, rapoarte generale",
        UserRole.Dean => "Management la nivel de facultate, aprobare note",
        UserRole.Secretary => "Procesare cereri și administrare studenți",
        UserRole.Professor => "Management note și prezențe pentru cursuri",
        UserRole.Student => "Vizualizare date proprii și înregistrare cereri",
        _ => ""
    };
}
