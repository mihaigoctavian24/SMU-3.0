@using SMU.Components.Shared

<div class="space-y-6">
    <!-- Welcome Header -->
    <div class="bg-gradient-to-r from-indigo-700 to-indigo-800 rounded-xl p-6 text-white">
        <h1 class="text-2xl font-bold">Buna ziua, Rector @UserName!</h1>
        <p class="mt-1 text-indigo-200">Iata un sumar al indicatorilor universitatii.</p>
    </div>

    <!-- University KPIs -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <StatsCard
            Label="Total Studenti"
            Value="@TotalStudents.ToString("N0")"
            Subtitle="@($"{TotalFaculties} facultati")"
            IconType="users"
            IconBgClass="bg-primary-100"
            IconClass="text-primary-600"
            ShowTrend="true"
            TrendValue="@StudentsTrend" />

        <StatsCard
            Label="Media Universitate"
            Value="@UniversityAverage.ToString("0.00")"
            Subtitle="medie generala"
            IconType="academic"
            IconBgClass="bg-success-100"
            IconClass="text-success-600"
            ShowTrend="true"
            TrendValue="@AverageTrend" />

        <StatsCard
            Label="Rata Promovare"
            Value="@(PassRate.ToString("0") + "%")"
            Subtitle="an universitar curent"
            IconType="attendance"
            IconBgClass="bg-info-100"
            IconClass="text-info-600" />

        <StatsCard
            Label="Total Profesori"
            Value="@TotalProfessors.ToString()"
            Subtitle="cadre didactice"
            IconType="users"
            IconBgClass="bg-secondary-100"
            IconClass="text-secondary-600" />
    </div>

    <!-- Faculty Comparison -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Comparatie Facultati</h3>
            <a href="/rapoarte/facultati" class="text-sm font-medium text-primary-600 hover:text-primary-700">
                Raport detaliat
            </a>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Facultate</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Studenti</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Profesori</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Media</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Promovare</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Trend</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var faculty in FacultyStats)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-2 h-8 rounded-full @faculty.ColorClass mr-3"></div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">@faculty.Name</div>
                                        <div class="text-xs text-gray-500">@faculty.Programs programe</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">@faculty.Students</td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">@faculty.Professors</td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="px-2 py-1 text-sm font-medium rounded-full @GetAverageClass(faculty.Average)">
                                    @faculty.Average.ToString("0.00")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">@faculty.PassRate%</td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (faculty.Trend > 0)
                                {
                                    <span class="text-success-600 flex items-center justify-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                                        </svg>
                                        @faculty.Trend%
                                    </span>
                                }
                                else if (faculty.Trend < 0)
                                {
                                    <span class="text-danger-600 flex items-center justify-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                                        </svg>
                                        @Math.Abs(faculty.Trend)%
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Rapoarte</h3>
            <div class="space-y-3">
                <QuickActionButton
                    Text="Raport Anual"
                    IconType="document"
                    Variant="primary"
                    FullWidth="true"
                    IsLink="true"
                    Link="/rapoarte/anual" />
                <QuickActionButton
                    Text="Comparatie Facultati"
                    IconType="view"
                    Variant="outline-primary"
                    FullWidth="true"
                    IsLink="true"
                    Link="/rapoarte/facultati" />
                <QuickActionButton
                    Text="Analiza Promovare"
                    IconType="view"
                    Variant="outline"
                    FullWidth="true"
                    IsLink="true"
                    Link="/rapoarte/promovare" />
                <QuickActionButton
                    Text="Export Date"
                    IconType="download"
                    Variant="outline"
                    FullWidth="true"
                    IsLink="true"
                    Link="/rapoarte/export" />
            </div>
        </div>

        <!-- University Summary -->
        <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900">Sumar Universitate</h3>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <div class="text-center">
                        <p class="text-3xl font-bold text-primary-600">@TotalFaculties</p>
                        <p class="text-sm text-gray-500 mt-1">Facultati</p>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-secondary-600">@TotalPrograms</p>
                        <p class="text-sm text-gray-500 mt-1">Programe</p>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-success-600">@TotalCourses</p>
                        <p class="text-sm text-gray-500 mt-1">Cursuri</p>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-info-600">@TotalGroups</p>
                        <p class="text-sm text-gray-500 mt-1">Grupe</p>
                    </div>
                </div>
                <div class="mt-6 pt-6 border-t border-gray-100">
                    <div class="grid grid-cols-2 gap-4">
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <p class="text-sm text-gray-500">An universitar</p>
                            <p class="text-lg font-semibold text-gray-900 mt-1">2024 - 2025</p>
                        </div>
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <p class="text-sm text-gray-500">Semestru curent</p>
                            <p class="text-lg font-semibold text-gray-900 mt-1">Semestrul I</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Section -->
    @if (AtRiskStudentsTotal > 0)
    {
        <div class="bg-warning-50 border border-warning-200 rounded-xl p-6">
            <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                    <svg class="w-6 h-6 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div class="flex-1">
                    <h4 class="font-semibold text-warning-800">Atentie: Studenti la Risc</h4>
                    <p class="mt-1 text-sm text-warning-700">
                        @AtRiskStudentsTotal studenti din intreaga universitate au indicatori sub pragul acceptabil.
                        Se recomanda monitorizare si interventie la nivel de facultate.
                    </p>
                    <a href="/rapoarte/risc" class="mt-3 inline-flex items-center text-sm font-medium text-warning-700 hover:text-warning-800">
                        Vezi raport detaliat
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public string UserName { get; set; } = "";

    // University KPIs
    private int TotalStudents = 2450;
    private decimal StudentsTrend = 5.2m;
    private decimal UniversityAverage = 7.65m;
    private decimal AverageTrend = 1.8m;
    private decimal PassRate = 85.5m;
    private int TotalProfessors = 156;
    private int TotalFaculties = 5;
    private int TotalPrograms = 18;
    private int TotalCourses = 245;
    private int TotalGroups = 72;
    private int AtRiskStudentsTotal = 45;

    // Data
    private List<FacultyStatDto> FacultyStats = new();

    protected override void OnInitialized()
    {
        LoadDashboardData();
    }

    private void LoadDashboardData()
    {
        FacultyStats = new List<FacultyStatDto>
        {
            new() { Name = "Facultatea de Informatica", Programs = 4, Students = 485, Professors = 32, Average = 7.85m, PassRate = 88, Trend = 2.5m, ColorClass = "bg-primary-500" },
            new() { Name = "Facultatea de Economie", Programs = 5, Students = 620, Professors = 45, Average = 7.45m, PassRate = 82, Trend = -1.2m, ColorClass = "bg-success-500" },
            new() { Name = "Facultatea de Drept", Programs = 3, Students = 380, Professors = 28, Average = 7.92m, PassRate = 90, Trend = 3.1m, ColorClass = "bg-warning-500" },
            new() { Name = "Facultatea de Psihologie", Programs = 3, Students = 520, Professors = 35, Average = 7.58m, PassRate = 85, Trend = 0.8m, ColorClass = "bg-info-500" },
            new() { Name = "Facultatea de Arte", Programs = 3, Students = 445, Professors = 26, Average = 8.12m, PassRate = 92, Trend = 1.5m, ColorClass = "bg-purple-500" }
        };
    }

    private string GetAverageClass(decimal average) => average switch
    {
        >= 8.5m => "bg-success-100 text-success-700",
        >= 7.0m => "bg-info-100 text-info-700",
        >= 5.0m => "bg-warning-100 text-warning-700",
        _ => "bg-danger-100 text-danger-700"
    };

    private class FacultyStatDto
    {
        public string Name { get; set; } = "";
        public int Programs { get; set; }
        public int Students { get; set; }
        public int Professors { get; set; }
        public decimal Average { get; set; }
        public int PassRate { get; set; }
        public decimal Trend { get; set; }
        public string ColorClass { get; set; } = "";
    }
}
