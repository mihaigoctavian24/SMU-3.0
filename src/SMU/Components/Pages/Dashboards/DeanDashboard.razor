            new() { StudentName = "Ionescu Andrei", CourseName = "Baze de Date", Grade = 8, ExamType = "Examen", ProfessorName = "Ana Marinescu" },
            new() { StudentName = "Popa Elena", CourseName = "Algoritmi", Grade = 10, ExamType = "Laborator", ProfessorName = "Mihai Stanescu" },
            new() { StudentName = "Munteanu Dan", CourseName = "POO", Grade = 7, ExamType = "Partial", ProfessorName = "Ion Georgescu" },
            new() { StudentName = "Stan Alexandru", CourseName = "Retele", Grade = 6, ExamType = "Examen", ProfessorName = "Cristian Popa" }
        };

        // Demo program stats
        ProgramStats = new List<ProgramStatDto>
        {
            new() { Name = "Informatica", Students = 245, Percentage = 50, ColorClass = "bg-primary-500" },
            new() { Name = "CTI", Students = 145, Percentage = 30, ColorClass = "bg-secondary-500" },
